    <target name="prepare">
        <echo>Please specify a target</echo>
    </target>
    <target name="deploy.integration">
        <exec executable="php">
            <arg value="${basedir}/utils/create-library-loader/run.php"/>
        </exec>
        <exec executable="php">
            <arg value="${basedir}/utils/google-drive-import/run.php"/>
        </exec>
        <exec executable="php">
            <arg value="${basedir}/utils/combine-javascript/run.php"/>
        </exec>
    </target>
