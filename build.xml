        <apply executable="java" force="true">
            <arg line="-jar ${basedir}/utils/yuicompressor-2.4.7.jar"/>
            <srcfile/>
            <arg value="-o"/>
            <targetfile/>
            <fileset dir="${basedir}">
            <include name="public/css/**/*.css"/>
